<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NowPlaying"
    android:background="@color/peri">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/podcastImgNp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:shapeAppearance="@style/curved"
        android:src="@drawable/icon"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/nextBtnNP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:icon = "@drawable/next_icon"
        app:iconTint="@color/black"
        android:backgroundTint="@color/peri"
        android:layout_centerVertical="true"
        app:iconSize="30dp"
        android:layout_marginEnd="10dp"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/PlayPauseBtnNp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon = "@drawable/play"
        app:iconTint="@color/black"
        android:backgroundTint="@color/peri"
        android:layout_centerVertical="true"
        app:iconSize="30dp"
        android:layout_toStartOf="@id/nextBtnNP"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:id="@+id/podcastnameNP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/podcast_name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toStartOf="@id/PlayPauseBtnNp"
        android:layout_toEndOf="@id/podcastImgNp"
        />





</RelativeLayout>