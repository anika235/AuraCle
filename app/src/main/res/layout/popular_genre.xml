<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popularGenreSkeleton"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popularTitle"
            style="?attr/textAppearanceHeadlineMedium"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPopularPodcasts"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</com.faltenreich.skeletonlayout.SkeletonLayout>