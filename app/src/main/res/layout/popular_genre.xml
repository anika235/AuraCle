<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popularGenreSkeleton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popularTitle"
            style="?attr/textAppearanceHeadlineMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Popular" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPopularPodcasts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/popularPodcastGhost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/curved"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Podcast Thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/genre_img_comedy" />

                <TextView
                    style="?attr/textAppearanceTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <TextView
                    style="?attr/textAppearanceBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/curved"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Podcast Thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/genre_img_comedy" />

                <TextView
                    style="?attr/textAppearanceTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <TextView
                    style="?attr/textAppearanceBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/curved"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Podcast Thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/genre_img_comedy" />

                <TextView
                    style="?attr/textAppearanceTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <TextView
                    style="?attr/textAppearanceBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/curved"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Podcast Thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/genre_img_comedy" />

                <TextView
                    style="?attr/textAppearanceTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <TextView
                    style="?attr/textAppearanceBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</com.faltenreich.skeletonlayout.SkeletonLayout>