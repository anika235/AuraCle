<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llPopularPodcast"
    android:layout_marginEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPodcastThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Podcast Thumbnail"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/curved"
        android:src="@drawable/genre_img_comedy" />

    <TextView
        android:id="@+id/txtPodcastTitle"
        style="?attr/textAppearanceTitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"/>

    <TextView
        android:id="@+id/txtPodcastAuthor"
        style="?attr/textAppearanceBodySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author"/>

</LinearLayout>